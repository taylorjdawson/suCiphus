{
  "name": "suciphus",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "forge:deploy": "turbo run forge:deploy --filter=forge",
    "forge:test": "dotenv -- forge test --root packages/suciphus-suapp",
    "forge:test-verbose": "dotenv -- forge test --ffi -vvvv --root packages/suciphus-suapp"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
