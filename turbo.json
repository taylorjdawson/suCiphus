{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "admin#build": {
      "dependsOn": ["^build"],
      "env": [
        "SUPABASE_URL",
        "SUPABASE_SERVICE_KEY",
        "NEXT_PUBLIC_APP_URL",
        "OPENAI_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "contracts:deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "forge:deploy": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "forge:test": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
